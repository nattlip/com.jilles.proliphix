{
  "id": "com.jilles.proliphix",
  "sdk": 2,
  "name": {
    "en": "Proliphix"
  },

  "description": {
    "en": "Adds support for Proliphix Thermostats"
  },
  "category": "climate",
  "version": "1.0.3",
  "compatibility": ">=1.5.0",
  "author": {
    "name": "Jilles Miedema",
    "email": "nattelip@hotmail.com"
  },
  "tags": {
    "en": [ "heating", "thermostat" ],
    "nl": [ "verwarming", "thermostaat" ]
  },
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },

  "capabilities": {
    "measure_temperature_one": {
      "type": "number",
      "desc": {
        "en": "Temperature one",
        "nl": "Temperatuur een"
      
      },

      "title": {
        "en": "Temperature one",
        "nl": "Temperatuur een"
      },
      "units": {
       "en": "°C"
      },
      "decimals": 2,
      "chartType": "spline",
      "getable": true,
      "setable": false
    },
    "measure_temperature_two": {
      "type": "number",
      "desc": {
        "en": "Temperature two",
        "nl": "Temperatuur twee"
      },
      "title": {
        "en": "Temperature two",
        "nl": "Temperatuur twee"
      },
      "units": {
        "en": "°C"
      },
      "decimals": 2,
      "chartType": "spline",
      "getable": true,
      "setable": false
    },
    "measure_temperature_three": {
      "type": "number",
      "desc": {
        "en": "Temperature three",
        "nl": "Temperatuur drie"
      },
      "title": {
        "en": "Temperature three",
        "nl": "Temperatuur drie"
      },
      "units": {
        "en": "°C"
      },
      "decimals": 2,
      "chartType": "spline",
      "getable": true,
      "setable": false
    }


  },

 

  "drivers": [
    {
      "id": "nt10",
      "name": {
        "en": "NT10",
        "nl": "NT10"
      },
      "class": "thermostat",
      "capabilities": [ "target_temperature", "measure_temperature", "thermostat_mode" ],
      "images": {
        "large": "/drivers/nt10/assets/images/large.jpg",
        "small": "/drivers/nt10/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "start"
        }

      ],

      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "ip",
              "type": "text",
              "label": {
                "en": "ip of thermostat"
              },
              "value": "Text value 1",
              "hint": {
                "en": "If needed, add an additional description to explain this setting."
              }
            },
            {
              "id": "port",
              "type": "text",
              "label": {
                "en": "port of thermostat"
              },
              "value": "port",
              "hint": {
                "en": "If needed, add an additional description to explain this setting."
              }
            },
            {
              "id": "user",
              "type": "text",
              "label": {
                "en": "username"
              },
              "value": "username",
              "hint": {
                "en": "If needed, add an additional description to explain this setting."
              }
            },
            {
              "id": "password",
              "type": "password",
              "label": {
                "en": "password"
              },
              "value": "password",
              "hint": {
                "en": "If needed, add an additional description to explain this setting."
              }
            },
            {
              "id": "treshold temperature",
              "type": "number",
              "label": {
                "en": "treshold temperature"
              },
              "value": 15,
              "attr": {
                "min": 3,
                "max": 30
              }
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Specific settings"
          },
          "children": [
            {
              "id": "checkbox1",
              "type": "checkbox",
              "value": true,
              "label": {
                "en": "Checkbox label 1"
              }
            },
            {
              "id": "dropdown1",
              "type": "dropdown",
              "value": "choice2",
              "label": {
                "en": "Dropdown label 1"
              },
              "values": [
                {
                  "id": "choice1",
                  "label": {
                    "en": "Dropdown choice 1"
                  }
                },
                {
                  "id": "choice2",
                  "label": {
                    "en": "Dropdown choice 2"
                  }
                }
              ]
            }
          ]
        }
      ]


    },
    {
